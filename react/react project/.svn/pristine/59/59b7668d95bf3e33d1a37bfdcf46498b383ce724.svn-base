module.exports = React.createClass({
    rowSelectedEvent: function(id) {
        this.state.select[id] = true;
        this.setState({select: this.state.select});
    },
    getInitialState: function() {
        return {select:{}}
    },
    render: function() {
        return <ul className="team_member_list">
            {
                this.props.data &&
                this.props.data.map(function(el) {
                    var className = '';
                    if(this.state.select[el.id]) className = 'check';
                    return <li className={className} key={el.id} onTouchStart={this.rowSelectedEvent.bind(this,el.id)}>
                        <div className="avatar"><img src="../../../assets/images/avatar.png" alt=""/></div>
                        <div className="member_name"><span>陈美美</span></div>
                    </li>
                }.bind(this))
            }
        </ul>
    }
});
