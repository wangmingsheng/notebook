module.exports = React.createClass({
    getInitialState: function() {
        var _className = [''];
        if (this.props.className) {
            _className.push(this.props.className);
        }

        return {className: _className.join(' '), id: Math.random()}
    },
    render: function() {
        return (<span className={this.state.className}>
					<input type="checkbox" id={this.state.id} onChange={this.props.onChange} value={this.props.value} disabled={this.props.disabled} checked={this.props.checked} defaultChecked={this.props.defaultChecked}/>
					<label htmlFor={this.state.id}>{this.props.text}</label>
				</span>);
    }
});
