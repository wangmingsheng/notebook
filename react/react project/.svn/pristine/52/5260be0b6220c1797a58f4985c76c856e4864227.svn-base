@import "media.css";

@import "base.css";

/*上推对话框*/

.pushup_dialog {
  position: absolute;
  width: 100%;
  height: 0;
  left: 0;
  bottom: 0;
  transition: height .5s;
  z-index: 10;
  background-color: #f2f2f2;
}

.pushup_dialog.out {
  height: 100%;
}

/*选择列表*/

.select_list {
  width: 100%;
}

.select_list>h4 {
  width: 100%;
  height: 1.5rem;
  overflow: hidden;
  text-indent: 0.9rem;
}

.select_list>h4>span {
  color: #9d9d9f;
  line-height: 1.5rem;
}

.select_list>ul {
  position: relative;
  width: 100%;
  background-color: #ffffff;
  overflow: hidden;
}

.select_list>ul>li {
  position: relative;
  width: 25.75rem;
}

.select_list>ul>li::after {
  content: '';
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-bottom: 1px solid #efeff4;
}

.select_list.short_line>ul>li:nth-child(1)::after {
  left: 0.9rem;
}

.select_list>ul>li>label {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 2.3rem;
}



.select_list>ul>li>label>i {
  display: inline-block;
  width: 1rem;
  height: 1rem;
  margin-left: 0.9rem;
  margin-top: 0.9rem;
  border: 1px solid #979797;
  border-radius: 0.25rem;
}

.select_list.round>ul>li>label>i {
  border-radius: 100%;
}

.select_list>ul>li>label.check>input+i:after {
  content: '\e605';
}

.select_list>ul>li>.text {
  display: inline-block;
  width: 16.45rem;
  padding: 0.7rem 1.1rem 0 0;
  margin-left: 2.3rem;
  margin-right: -0.5em;
}

.select_list.easy>ul>li>.text {
  padding-bottom: 0.7rem;
}

.select_list>ul>li>.text>.top_block {
  width: 100%;
}

.select_list>ul>li>.text>.top_block>.text {
  font-size: 0.7rem;
  line-height: 1rem;
  color: #474747;
}

.select_list>ul>li>.text>.top_block>.tip {
  display: inline-block;
  height: 1rem;
  padding: 0 0.4rem 0 0.4rem;
  margin-left: 0.5rem;
  line-height: 1.1rem;
  border-radius: 0.4rem;
  font-size: 0.6rem;
  text-align: center;
  color: #999999;
  background-color: #f2f2f2;
}

.select_list>ul>li>.text>.top_block>.tip.later {
  color: #ff8f78;
  background-color: #ffd4d3;
}

.select_list>ul>li>.text>.bottom_block {
  width: 100%;
}

.select_list>ul>li>.text>.bottom_block>.brand {
  font-size: 0.6rem;
  line-height: 1.35rem;
  color: #aaaaaa;
}

.select_list>ul>li>.option {
  position: absolute;
  left: 18.75rem;
  top: 0;
  width: 7rem;
  height: 100%;
}

.select_list>ul>li>.option>input {
  width: 3.5rem;
  height: 100%;
  font-size: 1.3rem;
  background-color: #b79de1;
  color: #ffffff;
}

.select_list>ul>li>.option>input:nth-child(1) {
  background-color: #b79de1;
}

.select_list>ul>li>.option>input:nth-child(2) {
  background-color: #82ced1;
}

/*跳转操作列表*/

.jump_option_list {
  width: 100%;
  padding-left: 0.9rem;
  margin-top: 1.05rem;
  background-color: #ffffff;
}

.jump_option_list>li {
  width: 100%;
  height: 2.5rem;
}

.jump_option_list>li:not(:nth-child(1)) {
  border-top: 1px solid #efeff4;
}

.jump_option_list>li>.option {
  line-height: 2.45rem;
  font-size: 0.9rem;
}

.jump_option_list>li>.right_block {
  float: right;
  height: 100%;
  padding-right: 0.85rem;
}

.jump_option_list>li>.right_block>.icon {
  width: 0.5rem;
  height: 0.8rem;
  margin: 0.85rem 0 0 0.85rem;
  color: #c8c8cd;
}

.jump_option_list>li>.right_block>.tip {
  font-size: 0.7rem;
  line-height: 2.5rem;
  color: #a5a5a5;
}

/*开关按钮*/

.switch_button>input {
  display: none;
  overflow: hidden;
}

.switch_button>label {
  position: relative;
  display: inline-block;
  width: 2.55rem;
  height: 1.55rem;
  margin-top: 0.5rem;
}

.switch_button>label::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #1f75d2;
  border-radius: 0.75rem;
}

.switch_button>input:checked+label::before {
  background-color: #efeff4;
}

.switch_button>label::after {
  content: '';
  position: absolute;
  width: 1.4rem;
  height: 1.4rem;
  top: 0.1rem;
  right: 0.1rem;
  border-radius: 100%;
  background-color: #ffffff;
  transition: right .3s;
}

.switch_button>input:checked+label::after {
  right: 1rem;
}

/*成员列表*/

.team_member_list {
  width: 100%;
  background-color: #ffffff;
}

.team_member_list>li {
  position: relative;
  width: 100%;
  height: 3rem;
}

.team_member_list>li.check:after {
  content: '\e605';
  position: absolute;
  top: 0.9rem;
  right: 0.75rem;
  width: 0.8rem;
  height: 0.6rem;
}

.team_member_list>li>.avatar {
  display: inline-block;
  width: 3.75rem;
  height: 100%;
  padding: 0.4rem;
  vertical-align: top;
  text-align: center;
}

.team_member_list>li>.member_name {
  display: inline-block;
  height: 100%;
  width: 15rem;
  border-bottom: 1px solid #f5f5f5;
}

.team_member_list>li>.member_name>span {
  line-height: 3rem;
}

/*新建任务*/

.newtask_page>ul {
  width: 100%;
  padding-left: 0.9rem;
  margin-top: 1.05rem;
  background-color: #ffffff;
}

.newtask_page>ul>li {
  width: 100%;
  height: 2.5rem;
}

.newtask_page>ul>li>input {
  width: 100%;
  height: 2.5rem;
  font-size: 0.9rem;
  color: #939298;
}

.newtask_page>ul>li>input::-webkit-input-placeholder {
  color: #939298;
  font-size: 0.9rem;
}

/*增加项目成员*/

.add_member_page {
  font-size: 0.9rem;
  color: #373737;
  overflow: hidden;
}

.add_member_page>.search_box {
  width: 100%;
  height: 2.25rem;
  padding: 0.4rem;
}

.add_member_page>.search_box>li {
  width: 100%;
  height: 100%;
}

.add_member_page>.search_box>li>input {
  width: 100%;
  height: 100%;
  border: 1px solid transparent;
  border-radius: 0.25rem;
  text-align: center;
  color: #929297;
  font-size: 0.7rem;
}

.add_member_page>.search_box>li>input::-webkit-input-placeholder {
  font-size: 0.7rem;
}

/*默认项目*/

.default_project_page>.tab_box {
  width: 100%;
  height: 2.1rem;
  margin: 0.05rem 0 0.05rem 0;
  padding: 0.35rem 0.8rem 0.35rem 0.8rem;
  background-color: #f8f8f8;
}

.default_project_page>.tab_box>ul {
  width: 100%;
  height: 100%;
  border: 1px solid #0076ff;
  border-radius: 0.25rem;
  font-size: 0.6rem;
}

.default_project_page>.tab_box>ul>li {
  display: inline-block;
  width: 33.33%;
  height: 100%;
  margin-right: -.5em;
  border-right: 1px solid #0076ff;
}

.default_project_page>.tab_box>ul>li:last-child {
  border-right-width: 0;
}

.default_project_page>.tab_box>ul>li>label {
  display: inline-block;
  width: 100%;
  height: 100%;
  color: #0076ff;
  text-align: center;
  line-height: 1.35rem;
}

.default_project_page>.tab_box>ul>li.bkg>label {
  background-color: #0076ff;
  color: #ffffff;
}

.default_project_page input[name='tab_page'] {
  display: none;
}

.default_project_page input[name='tab_page']:checked+ul {
  display: block;
}

.default_project_page input[name='tab_page']+ul {
  display: none;
}