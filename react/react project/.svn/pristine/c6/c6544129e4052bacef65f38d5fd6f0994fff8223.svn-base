var eventLister = {};

module.exports = {
	on: function(eventType, func) {
		if (!eventLister[eventType]) eventLister[eventType] = [];
		eventLister[eventType].push(func);
	},

	off: function(eventType, func) {
		if (!eventLister[eventType]) return false;
		if (!fn) {
			delete eventLister[eventType];
			return true;
		}

		for (var i = eventLister[eventType].length - 1; i >= 0; i--) {
			if (eventLister[eventType][i] == func) eventLister[eventType].splice(i, 1);
		}
	},

	trigger: function(eventType, data) {
		if (!eventLister[eventType]) return false;
		var data = Array.prototype.slice.call(arguments, 1);
		for (var i = 0; i < eventLister[eventType].length; i++) {
			eventLister[eventType][i].apply(null, data);
		}
	}
}