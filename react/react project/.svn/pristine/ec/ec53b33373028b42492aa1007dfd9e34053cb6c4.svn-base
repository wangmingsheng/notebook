/*-- voiceplay --*/

.voiceplay {
  display: inline-block;
  width: 10rem;
  height: 2.5rem;
  padding-top: 0.3rem;
  border: 0.05rem solid #a3d797;
  border-radius: 0.25rem;
  position: relative;
  background-color: #a3d797;
  margin-left: 0.5rem;
}

.voiceplay:before {
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  padding: 0;
  left: -0.5rem;
  top: 0.5rem;
  border-width: 0.25rem;
  border-style: solid;
  border-color: transparent;
  border-right-color: #a3d797;
}

.voiceplay>div {
  border-radius: 50%;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
  opacity: 1;
}

.voiceplay .small {
  width: 0;
  height: 0;
  margin-left: 0.25rem;
  border: 0.3rem solid transparent;
  border-right: 0.3rem solid #557d4a;
}

.voiceplay .middle {
  width: 1.2rem;
  height: 1.2rem;
  margin-left: -0.8rem;
  border: 0.15rem solid transparent;
  border-right: 0.15rem solid #557d4a;
}

.voiceplay .large {
  width: 1.8rem;
  height: 1.8rem;
  margin-left: -1.4rem;
  border: 0.15rem solid transparent;
  border-right: 0.15rem solid #557d4a;
}

.voiceplay.play .middle {
  animation: show_middle 2s ease-in-out infinite;
}

.voiceplay.play .large {
  animation: show_large 2s ease-in-out infinite;
}

.voiceplay audio {
  display: none;
}

@keyframes show_middle {
  0% {
    opacity: 0;
  }

  30% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

@keyframes show_large {
  0% {
    opacity: 0;
  }

  60% {
    opacity: 1;
  }

  100% {
    opacity: 0;
  }
}

