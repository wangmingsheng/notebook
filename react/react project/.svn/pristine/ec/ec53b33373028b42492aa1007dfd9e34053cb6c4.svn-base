/*上推对话框*/

.pushup_dialog {
  position: absolute;
  width: 100%;
  height: 0;
  left: 0;
  bottom: 0;
  transition: height .5s;
  z-index: 10;
  background-color: #f2f2f2;
}

.pushup_dialog.out {
  height: 100%;
}

.clearfix:after {
  content: "";
  display: table;
  clear: both;
}

/*-- Loading --*/

.loading_bounce {
  margin: 0 auto;
  width: 4rem;
  text-align: center;
  position: absolute;
  top: 40%;
  left: 0;
  right: 0;
}

.loading_bounce>div {
  width: 0.8rem;
  height: 0.8rem;
  background-color: #ccc;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: three-bounce 1.4s ease-in-out 0s infinite both;
  animation: three-bounce 1.4s ease-in-out 0s infinite both;
  margin: 0 0.25rem;
}

.loading_bounce.small>div {
  width: 0.5rem;
  height: 0.5rem;
  margin: 0 0.15rem;
}

.loading_bounce>div:nth-child(1) {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.loading_bounce>div:nth-child(2) {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes three-bounce {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
  }

  40% {
    -webkit-transform: scale(1);
  }
}

@keyframes three-bounce {
  0%, 80%, 100% {
    transform: scale(0);
  }

  40% {
    transform: scale(1);
  }
}

/*-- CheckBox --*/

.checkbox {
  width: 1.05rem;
  height: 1.05rem;
}

.checkbox input[type=checkbox] {
  display: none;
  overflow: hidden;
}

.checkbox input[type=checkbox] + i {
  position: relative;
  color: #474747;
  padding-left: 1.4rem;
  font-size: 0.7rem;
  line-height: 1rem;
  white-space: nowrap;
}

.checkbox input[type=checkbox] + i:after {
  position: absolute;
  left: 0;
  top: 0;
  width: 1.05rem;
  height: 1.05rem;
  border-radius: 0.15rem;
  border: 0.05rem solid #bbb;
  content: "";
  overflow: hidden;
  z-index: 0;
}

.checkbox input[type=checkbox]:checked + i:after {
  background: #1F75D2;
  border: 0.05rem solid #1F75D2;
}

.checkbox input[type=checkbox]:checked + i:before {
  content: "\e605";
  position: absolute;
  left: 0.1rem;
  top: 0;
  z-index: 1;
  text-indent: 0;
  font-weight: bold;
  color: #90BBE9;
  font-size: 0.8rem;
}

.checkbox input[type=checkbox]:indeterminate + i:before {
  content: "";
  width: 0.5rem;
  height: 0.1rem;
  overflow: hidden;
  background: #888888;
  position: absolute;
  left: 0.15rem;
  top: 45%;
}

.checkbox input[type=checkbox]:disabled + i {
  cursor: default;
}

.checkbox input[type=checkbox]:disabled + i:before {
  color: #cccccc;
}

.checkbox input[type=checkbox]:disabled + i:after {
  border: 0.05rem solid #dddddd;
}

.checkbox_radio {
  display: inline-block;
}

.checkbox_radio input[type=checkbox] + i:after {
  border-radius: 50%;
}

.checkbox_radio input[type=checkbox]:checked + i:after {
  border-radius: 50%;
}

.checkbox_round input[type=checkbox] + i:after {
  border-radius: 50%;
}

/*SwitchBox*/

.switch_button {
  display: inline-block;
}

.switch_button>input {
  display: none;
  overflow: hidden;
}

.switch_button>i {
  position: relative;
  display: inline-block;
  width: 2.55rem;
  height: 1.55rem;
  margin-top: 0.5rem;
}

.switch_button>i:before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #efeff4;
  border-radius: 0.75rem;
}

.switch_button>input:checked+i::before {
  background-color: #1f75d2;
}

.switch_button>i:after {
  content: '';
  position: absolute;
  width: 1.4rem;
  height: 1.4rem;
  top: 0.1rem;
  right: 1rem;
  border-radius: 50%;
  background-color: #ffffff;
  transition: right .3s;
}

.switch_button>input:checked+i::after {
  right: 0.1rem;
}

