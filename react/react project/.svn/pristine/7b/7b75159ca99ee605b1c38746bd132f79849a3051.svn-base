module.exports = React.createClass({
    componentWillReceiveProps: function(nProps) {
        if (nProps.data != this.state.data) {
            this.setState({data: nProps.data})
        }
    },
    shouldComponentUpdate: function(nProp, nState) {
        return this.state != nState;
    },
    getInitialState: function() {
        return {data: this.props.data || []}
    },
    render: function() {

        return (
            <ul className="across_member_list" style={{width: this.state.data.length * 25 + 'px', boxSizing: 'content-box'}}>
                {
                    this.state.data.map(function(item, index) {
                        return <li key={index}><img src={item.avatar} alt=""/></li>
                    })
                }
            </ul>
        );
    }
});
