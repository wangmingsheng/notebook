
module.exports = React.createClass({
    dialogClick: function(e) {
        var $target = $(e.target);
        if($target.is('.content_list') || $target.parents().filter('.content_list').length > 0) return false;
        this.action();
    },
    action: function(flag) {
        if(flag) return this.setState({out: 'out'});
        this.setState({out: 'in'});
    },
    transitionEnd: function() {
        if(this.state.out == 'in') this.setState({out: ''});
    },
    componentWillReceiveProps: function(nextProps) {
        this.setState(this.state);
    },
    shouldComponentUpdate: function(nextProps, nextState) {
        return nextState != this.state;
    },
    componentDidMount: function() {
        $('.popup_dialog').on('webkitTransitionEnd', this.transitionEnd);
    },
    componentWillUnmount: function() {
        $('.popup_dialog').off('webkitTransitionEnd', this.transitionEnd);
    },
    getInitialState: function() {
        return {out: ''};
    },
    render: function() {
        var name = ['popup_dialog', this.state.out];

        return (<div className={name.join(' ')} onClick={this.dialogClick} data-lock={this.props.datalock || null}>
            <div className="content_list">
                {this.props.children}
            </div>
            <div className="bkg"></div>
        </div>
        );
    }
});