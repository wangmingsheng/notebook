module.exports = React.createClass({
    updateData: function(source) {
        this.setState({source: source});
    },
    getInitialState: function() {
        return {source: this.props.data || []}
    },
    render: function() {

        return (
            <ul className="across_member_list" style={{width: this.state.source.length * 25 + 'px', boxSizing: 'content-box'}}>
                {
                    this.state.source.map(function(item, index) {
                        return <li key={index}><img src={item.avatar} alt=""/></li>
                    })
                }
            </ul>
        );
    }
});
