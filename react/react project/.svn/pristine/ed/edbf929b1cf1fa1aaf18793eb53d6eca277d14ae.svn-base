module.exports = React.createClass({
    setThisHead: function() {
        var headObject = {title: '添加项目成员', back: '后退', operat: {text: '完成', event: this.props.pushIn}};
        Interface.setHeader(headObject);
    },
    componentWillReceiveProps: function(nProps) {
        if (nProps.position != this.state.position) {
            this.setState({position: nProps.position})
        }
        if(nProps.position) this.setThisHead();
    },
    shouldComponentUpdate: function(nProp, nState) {
        return this.state != nState;
    },
    getInitialState: function() {
        this.setThisHead();
        return {position: false}
    },
    render: function() {
        var className = ["pushup_dialog"];
        if(this.state.position) className.push('out');
        return <div className={className.join(' ')}>
            {this.props.children}
        </div>
    }
});